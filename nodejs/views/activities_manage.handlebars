<html>
    <body>
        <div class="sidebar">
            <h2 id="sidebar_logo">LuluOrange</h2>
            <a href="index.html">Welcome</a>
            <a href="activities_manage.html">Manage Activities</a>
            <a href="customers_manage.html">Manage Customers</a>
            <a href="genders_manage.html">Manage Genders</a>
            <a href="orders_manage.html">Manage Orders</a>
            <a href="orders_products_manage.html">Manage Orders_Products</a>
            <a href="products_manage.html">Manage Products</a>
            <a href="stores_manage.html">Manage Stores</a>
        </div>

        <div class="container-fluid">
            <div class="content">
                <h1>Manage Activities</h1>
                <br>
                <h2>Activities List</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">activity_id</th>
                            <th scope="col">activity_description</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each activities}}
                        <tr>
                            <td>{{activity_id}}</td>
                            <td>{{activity_description}}</td>
                            <td><a href="/activities_manage/{{activity_id}}">Edit</a></td>
                            <td><button onclick="deleteActivity({{activity_id}})">Delete</button></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <br>
                <h2>Add Activity</h2>
                <form>
                    <form id="addactivity" action="/activities_manage" method="post">
                        <div class="form-group">
                            <label for="activity_id">activity_description</label>
                            <input type="text" class="form-control" id="activity_description" name="activity_description">
                        </div>
                    </form>
                    <br>
                    <div>
                        <button type="submit" class="btn btn-primary">Add Activity</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>